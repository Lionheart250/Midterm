<!-- allListings.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Add necessary meta tags, CSS links, and title -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Listings</title>
  <!-- Add necessary CSS links here -->
</head>
<body>
  <!-- Header -->
  <% include('partials/_header') %>

  <!-- Listing Section -->
  <section class="all-listings-section">
    <div class="container">
      <h2>All Listings</h2>
      <div class="row">
        <% listings.forEach((listing) => { %>
          <div class="col-md-4 product-item">
            <div class="card">
              <img class="card-img-top" src="<%= listing.imageUrl %>" alt="Product">
              <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text"><%= listing.description %></p>
                <p class="price">$<%= listing.price.toFixed(2) %></p>
                <!-- Add other listing details -->
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>
  <!-- Footer -->
  <footer>
    <div class="container">
      <p>&copy; 2023 Clothing Buy and Sell. All rights reserved.</p>
    </div>
  </footer>

  <!-- Add any necessary scripts -->
  <!-- Add necessary script links here -->
</body>
</html>
