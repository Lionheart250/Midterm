<header>
  <nav class="navbar navbar-expand-md header">
    <section class="left-section">
      <a class="navbar-brand" href="/urls">ebuy</a>
      <a class="nav-item nav-link" href="/">Listings</a>
      <a class="nav-item nav-link" href="/">Sell</a>
    </section>
    <!-- Search Bar -->
    <section class="search-section">
      <input class="search-input" type="search" placeholder="Search for clothing..." aria-label="Search">
      <button class="search-button">
        <img class="search-icon" src="/images/icon/search.svg">
        <div class="tooltip">Search</div>
      </button>
    </section>
    <!-- Login Logout -->
    <% if (currentUser) { %>
      <section class="right-section">
        <a class="nav-item nav-link" href="/">Favorites</a>
        <!-- Other navigation links -->
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Logout</button>
          </div>
        </form>
      </section>
    <% } else { %>
      <section class="right-section">
        <a class="nav-item nav-link" href="/register">Register</a>
        <!-- Login form -->
        <form action="/login" method="POST">
          <input type="email" name="email" placeholder="Email">
          <input type="password" name="password" placeholder="Password">
          <button type="submit">Login</button>
        </form>
      </section>
    <% } %>
  </nav>
</header>